<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/peking1">

    <TextView
        android:id="@+id/display_txt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="PKU Map"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#a21fae"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:hint="请输入用户名"
        android:textColorHint="#848383"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:selectAllOnFocus="true"
        android:paddingLeft="7dp"
        android:layout_above="@+id/passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/passwd"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:hint="请输入密码"
        android:textColorHint="#848383"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:paddingLeft="7dp"
        android:layout_above="@+id/signinbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/signinbtn"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:text="登录"
        android:textSize="15sp"
        android:textColor="#d2d1d1"
        android:layout_above="@+id/signinlater"
        android:layout_marginLeft="110dp"/>

    <Button
        android:id="@+id/signupbtn"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:text="注册"
        android:textSize="15sp"
        android:textColor="#d2d1d1"
        android:layout_above="@+id/signinlater"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"/>

    <Button
        android:id="@+id/signinlater"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/later"
        android:textSize="10sp"
        android:textColor="#454545"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"
        android:layout_marginBottom="10dp">
    </View>

</RelativeLayout>