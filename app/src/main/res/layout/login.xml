<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/display_txt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="PKU Map"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#a21fae"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/signinbtn"
        android:layout_marginBottom="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="65dp"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:hint="请输入用户名"
            android:textColorHint="#9e9c9c"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="#f2eded"
            android:selectAllOnFocus="true"
            android:paddingLeft="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/signinbtn"
        android:layout_marginBottom="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="80dp"/>

        <EditText
            android:id="@+id/passwd"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:hint="请输入密码"
            android:textColorHint="#9e9c9c"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="#f2eded"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:paddingLeft="7dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/signinbtn"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:text="登录"
        android:textSize="15sp"
        android:textColor="#b7b5b5"
        android:layout_above="@+id/signinlater"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/signupbtn"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:text="注册"
        android:textSize="15sp"
        android:textColor="#b7b5b5"
        android:layout_above="@+id/signinlater"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"/>

    <Button
        android:id="@+id/signinlater"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/later"
        android:textSize="10sp"
        android:textColor="#b7b5b5"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/wechatbtn"
        android:layout_marginBottom="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"
        android:layout_above="@+id/wechatbtn"
        android:layout_marginBottom="10dp">
    </View>

    <ImageButton
        android:id="@+id/wechatbtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:background="@mipmap/wechat"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:id="@+id/qqbtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@mipmap/qq"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"/>
</RelativeLayout>