<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#51a486"
        android:gravity="center"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/textView" />

    <ImageButton
        android:id="@+id/suret"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/arrow_left_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:background="#d9d9d8"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:showDividers="middle"
            android:divider="@drawable/divider"
            android:layout_weight="0.49">

            <EditText
                android:id="@+id/suid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
                android:hint="请输入学号"
                android:textColorHint="#717070"
                android:textColor="#000000"
                android:textSize="17sp"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:background="@null"/>
            <EditText
                android:id="@+id/suusername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_face_black"
                android:hint="请输入用户名"
                android:textColorHint="#717070"
                android:textColor="#000000"
                android:textSize="17sp"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:background="@null"/>
            <EditText
                android:id="@+id/supasswd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_lock_black_24dp"
                android:hint="请输入密码"
                android:textColorHint="#717070"
                android:textColor="#000000"
                android:textSize="17sp"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:background="@null"/>
            <EditText
                android:id="@+id/supasswd2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_lock_black_24dp"
                android:hint="请确认密码"
                android:textColorHint="#717070"
                android:textColor="#000000"
                android:textSize="17sp"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:background="@null"/>
        </LinearLayout>

        <Button
            android:id="@+id/su"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#51a486"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="注 册"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>